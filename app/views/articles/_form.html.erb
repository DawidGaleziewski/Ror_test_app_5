<%=  render 'shared/errors', obj: @article %>
 
<div class = 'row'>
  <div class = 'col-xs-12'>
    
      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |variable| %>
      
        <div class= 'form-group'>
          
          <div class = 'control-label col-sm-2'>

            <%= variable.label :title %>
          
          </div>
          
          <div class = 'col-sm-5'>
            
            <%= variable.text_field :title, class: 'form-control', placeholder: 'Article title', autofocus: true %>
            
          </div>
          
        </div>
        
        
        <div class = 'form-group'>
          
          <div class = 'control-label col-sm-2'>
            
            <%= variable.label :description %>
            
          </div>
          
          <div class = col-sm-10>
            
            <%= variable.text_area :description, rows: 10, class: 'form-control', placeholder: 'Body of the article' %>
          
          </div>
          
        
        </div>
        
        <div class = 'form-group'>
        
          <div class = 'control-label col-sm-2'>
            
            <%= variable.label :author %>
            
          </div>
          
          <div class = 'col-sm-2'>
        
            <%= variable.text_field :author, class: 'form-control', placeholder: 'your name' %>
          
          </div>

        </div>
        
        <div class = 'form-group'>
          <div class = 'col-sm-offset-2 col-sm-10'>
            <%= variable.submit class: 'btn btn-primary btn-lg' %>
          </div> 
        </div>
        
      <% end %>
    
    
  </div>
</div>


<div class = 'col-xs-4 col-xs-offset-2'>
  [<%= link_to 'Cancel article request', articles_path %>]
</div>